{
  "compilerOptions": {
    /* Projects */
    // "incremental": true,

    /* Language and Environment */
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Modules */
    "resolveJsonModule": true,

    /* Emit */
    "outDir": "./dist", 
    "sourceMap": true,

    /* Type Checking */
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    /* Completeness */
    "skipLibCheck": true
  }
}
